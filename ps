#!/usr/bin/env python3
import mechanicalsoup

# Load PowerSchool login page
browser = mechanicalsoup.StatefulBrowser()
browser.open("https://ps.fccps.org")

# Fill in login form
browser.select_form('#LoginForm')
browser['account'] = 'boesene'
browser['pw'] = 'you thought'
resp = browser.submit_selected()

# Verify we're in
page = browser.get_current_page()
print(page)
messages = page.find('td')
print(messages.text)
